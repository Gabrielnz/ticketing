extends layout


block styles
  link(rel='stylesheet' href='/css/header-menu.css')
  link(rel='stylesheet' href='/css/dashboard.css')
  link(rel='stylesheet' href='/css/footer.css')

block content
  
  include header-menu.pug

  - var sold_tickets = cards.sold_tickets
  - var raised_money = cards.raised_money
  - var events_held = cards.events_held
  - var sold_tickets_percentage = cards.sold_tickets_percentage
    
  div(id='dashboard' class='ticketingContent-dashboard content')
    div(class='ticketingContent-dashboard-header')
      h1(class='ticketingContent-title')
        b Dashboard
    hr

    div(class='ticketingContent-dashboard-cardContainer')
      div(class='ticketingContent-card sold-tickets-card')
        i(class='fa fa-ticket fa-lg' aria-hidden='true')
        div(class='ticketingContent-card-dataContainer')
          label(class='ticketingContent-card-data')
            b Boletos vendidos
          label(class='ticketingContent-card-dataNumber')
            b #{sold_tickets}
      div(class='ticketingContent-card raised-money-card')
        i(class='fa fa-usd fa-lg' aria-hidden='true')
        div(class='ticketingContent-card-dataContainer')
          label(class='ticketingContent-card-data')
            b Dinero recaudado
          label(class='ticketingContent-card-dataNumber')
            b #{raised_money} MXN
      div(class='ticketingContent-card events-held-card')
        i(class='fa fa-calendar fa-lg' aria-hidden='true')
        div(class='ticketingContent-card-dataContainer')
          label(class='ticketingContent-card-data')
            b Eventos realizados
          label(class='ticketingContent-card-dataNumber')
            b #{events_held}
      div(class='ticketingContent-card sold-tickets-percentage-card')
        i(class='fa fa-percent fa-lg' aria-hidden='true')
        div(class='ticketingContent-card-dataContainer')
          label(class='ticketingContent-card-data')
            b % boletos vendidos
          label(class='ticketingContent-card-dataNumber')
            b #{sold_tickets_percentage} %


    div(class='ticketingContent-dashboard-boxContainer')
      div(class='ticketingContent-dashboard-box')
        div(class='ticketingContent-dashboard-boxHeader')
          h3(class='ticketingContent-dashboard-boxHeader-title')
            b Eventos activos
        div(class='ticketingContent-dashboard-boxTableContainer')
          table(class='stack dashboard-table unstriped')
            thead
              tr
                th(class='dashboard-table-eventTitle-header') Nombre de evento
                th(class='dashboard-table-date-header') Fecha
                th(class='dashboard-table-total-header') Total boletos
                th(class='dashboard-table-amount-header') Dinero recaudado
            tbody
              each event in active_events
                tr
                  td(class='dashboard-table-eventTitle')
                    b= event.name
                  td(class='dashboard-table-date')= event.date
                  td(class='dashboard-table-total')= event.total
                  td(class='dashboard-table-amount')
                    b= event.amount + ' MXN'

  include mobile-placeholder.pug

  include footer.pug