extends layout

block styles
  link(rel='stylesheet' href='css/index.css')

block content
  header(class='ticketingHeader')
    div(class='ticketingHeader-adminBox')
      div(class='ticketingHeader-adminBox-avatar')
      span
        b Admin
    div(class='ticketingHeader-options tab')
      button(class='ticketingHeader-options-dashboard tablinks active' onclick="openOption(event, 'dashboard')")
        i(class='fa fa-bar-chart' aria-hidden='true') &nbsp;
        span Dashboard
      button(class='ticketingHeader-options-events tablinks' onclick="openOption(event, 'events')")
        i(class='fa fa-ticket' aria-hidden='true') &nbsp;
        span Eventos
      button(class='ticketingHeader-options-payment tablinks' onclick="openOption(event, 'payment')")
        span(class='fa-stack')
          i(class='fa fa-circle fa-stack-2x')
          i(class='fa fa-usd fa-stack-1x' aria-hidden='true')
        | &nbsp;
        span Pagos
      button(class='ticketingHeader-options-logout')
        | Log Out &nbsp;
        i(class='fa fa-sign-out fa-lg' aria-hidden='true')

  section(class='ticketingContent')
    div(id='dashboard' class='ticketingContent-dashboard tabcontent')
      div(class='expanded row')
        div(class='column small-12')
          h1(class='ticketingContent-title')
            b Dashboard
          hr
      div(class='expanded row')
        div(class='column ticketingContent-dashboard-cardContainer')
          div(class='ticketingContent-card sold-tickets-card')
            i(class='fa fa-ticket fa-lg' aria-hidden='true')
            label(class='ticketingContent-card-data')
              b Boletos vendidos
            label(class='ticketingContent-card-dataNumber')
              b 300
          div(class='ticketingContent-card raised-money-card')
            i(class='fa fa-usd fa-lg' aria-hidden='true')
            label(class='ticketingContent-card-data')
              b Dinero recaudado
            label(class='ticketingContent-card-dataNumber')
              b 600.000 MXN
          div(class='ticketingContent-card events-held-card')
            i(class='fa fa-calendar fa-lg' aria-hidden='true')
            label(class='ticketingContent-card-data')
              b Eventos realizados
            label(class='ticketingContent-card-dataNumber')
              b 5
          div(class='ticketingContent-card sold-tickets-percentage-card')
            i(class='fa fa-percent fa-lg' aria-hidden='true')
            label(class='ticketingContent-card-data')
              b % boletos vendidos
            label(class='ticketingContent-card-dataNumber')
              b 75%
