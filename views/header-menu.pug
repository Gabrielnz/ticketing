- var dashboardTab = 'ticketingHeader-options-dashboard tablinks'
- var eventsTab = 'ticketingHeader-options-events tablinks'
- var paymentTab = 'ticketingHeader-options-payment tablinks'
- activeTab === 'dashboard' ? dashboardTab += ' active' : null
- activeTab === 'events' ? eventsTab += ' active' : null

header(class='ticketingHeader')
  div(class='ticketingHeader-adminBox')
    div(class='ticketingHeader-adminBox-avatar')
    span
      b Admin
  div(class='ticketingHeader-options tab')
    a(href='/' class= dashboardTab)
      i(class='fa fa-bar-chart' aria-hidden='true') &nbsp;
      span Dashboard
    a(href='/events' class= eventsTab)
      i(class='fa fa-ticket' aria-hidden='true') &nbsp;
      span Eventos
    a(class= paymentTab)
      span(class='fa-stack')
        i(class='fa fa-circle fa-stack-2x')
        i(class='fa fa-usd fa-stack-1x' aria-hidden='true')
      | &nbsp;
      span Pagos
    a(class='ticketingHeader-options-logout')
      | Log Out &nbsp;
      i(class='fa fa-sign-out fa-lg' aria-hidden='true')